<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/ui">
        <Preference
            android:key="theme"
            android:title="@string/theme" />
        <PreferenceScreen
            android:title="@string/color_title"
            android:summary="@string/color_summary">
            <PreferenceCategory
                android:title="@string/color_title">
                <Preference
                    android:key="skin"
                    android:title="@string/primary_color_title"
                    android:summary="@string/primary_color_summary" />
                <Preference
                    android:key="fab_skin"
                    android:title="@string/accent_color_title"
                    android:summary="@string/accent_color_summary"/>
                <Preference
                    android:key="icon_skin"
                    android:title="@string/icon_color_title"
                    android:summary="@string/icon_color_summary"/>
                <SwitchPreference
                    android:key="coloriseIcons"
                    android:defaultValue="false"
                    android:title="@string/colorize"
                    android:summary="@string/colorize_summary" />
                <SwitchPreference
                    android:key="colorednavigation"
                    android:defaultValue="false"
                    android:title="@string/colourednavigation"
                    android:summary="@string/colourednavigationsum"
                    android:enabled="false" />
                <SwitchPreference
                    android:key="random"
                    android:title="@string/random"
                    android:summary="@string/random_summary"/>
                </PreferenceCategory>
            </PreferenceScreen>

        <SwitchPreference
            android:key="circularimages"
            android:defaultValue="true"
            android:summary="@string/circularimages"
            android:title="@string/circularicons"/>
        <SwitchPreference
            android:key="plus_pic"
            android:title="@string/gplus_pic_title"
            android:summary="@string/gplus_pic_summary"
            android:defaultValue="false"
            android:enabled="true"/>
        <Preference
            android:key="hidemode"
            android:title="@string/hide_mode_title" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="showDividers"
            android:title="Show Dividers" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/general">
        <SwitchPreference
            android:defaultValue="true"
            android:key="savepaths"
            android:summary="@string/savepathsummary"
            android:title="@string/savepaths" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="showThumbs"
            android:summary="@string/thumbSummary"
            android:title="@string/thumb" />
		<SwitchPreference
            android:defaultValue="false"
            android:key="showHidden"
            android:title="@string/hidden" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="showLastModified"
            android:enabled="false"
            android:summary="@string/lastModifiedSummary"
            android:title="@string/lastModifiedPref" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="showFileSize"
            android:summary="@string/sizePrefSummary"
            android:title="@string/sizePref" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="goBack_checkbox"
            android:title="@string/back_title"
            android:summary="@string/back_summary" />
        <Preference
            android:key="columns"
            android:title="@string/gridcolumnno" />
        <Preference
            android:key="dirontop"
            android:title="@string/directorysort" />

        <Preference
            android:key="sortby"
            android:title="@string/sortby" />
    
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/archive_preferences">
        <EditTextPreference
            android:key="extractpath"
            android:title="@string/archive_extract_folder"
            android:summary="@string/archive_summary">
        </EditTextPreference>
        <EditTextPreference
            android:key="zippath"
            android:summary="@string/zip_summary"
            android:title="@string/zip_create_folder">
        </EditTextPreference>
</PreferenceCategory>
    <PreferenceCategory android:title="@string/miscellaneous">

        <SwitchPreference
            android:defaultValue="false"
            android:key="showPermissions"
            android:summary="@string/rootPrefSummary"
            android:title="@string/rootPref" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="rootmode"
            android:summary="@string/rootmodesummary"
            android:title="@string/rootmode" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/about">
        <PreferenceScreen
            android:title="@string/aboutFileManager" >
            <Preference
                android:key="studio"
                android:title="@string/version"
                android:summary="v2.0"/>
            <Preference
                android:key="authors"
                android:title="@string/authors" />
            <PreferenceScreen
                android:title="@string/translators">
                <Preference
                    android:title="@string/german_translation_title"
                    android:summary="@string/german_translation_summary"/>
                <Preference
                    android:title="@string/italian_translation_title"
                    android:summary="@string/italian_translation_summary"/>
                <Preference
                    android:title="@string/french_translation_title"
                    android:summary="@string/french_translation_summary"/>
                <Preference
                    android:title="@string/russian_translation_title"
                    android:summary="@string/russian_translation_summary"/>
                <Preference
                    android:title="@string/spanish_translation_title"
                    android:summary="@string/spanish_translation_summary"/>
                <Preference
                    android:title="@string/basque_translation_title"
                    android:summary="@string/basque_translation_summary"/>
                <Preference
                    android:title="@string/chinese_translation_title"
                    android:summary="@string/chinese_translation_summary"/>
                <Preference
                    android:title="@string/serbian_translation_title"
                    android:summary="@string/serbian_translation_summary"/>
                <Preference
                    android:title="@string/turkish_translation_title"
                    android:summary="@string/turkish_translation_summary"/>
                <Preference
                    android:title="@string/ukrainian_translation_title"
                    android:summary="@string/ukrainian_translation_summary"/>
                <Preference
                    android:title="@string/portuguese_translation_title"
                    android:summary="@string/portuguese_translation_summary" />
                <Preference
                    android:title="@string/polish_translation_title"
                    android:summary="@string/polish_translation_summary" />
                <Preference
                    android:title="@string/korean_translation_title"
                    android:summary="@string/korean_translation_summary" />

                </PreferenceScreen>
            <Preference
                android:key="changelog"
                android:title="@string/changelog" />
            <Preference
                android:key="xda"
                android:title="@string/xda_title"
                android:summary="@string/xda_summary">
                <intent
                    android:action="android.intent.action.VIEW"
                    android:data="http://forum.xda-developers.com/android/apps-games/app-amaze-file-managermaterial-theme-t2937314" />
            </Preference>
            <Preference
                android:key="g_plus"
                android:title="@string/g_plus_community_title">
                <intent
                    android:action="android.intent.action.VIEW"
                    android:data="https://plus.google.com/communities/113997576965363268101" />
            </Preference>
            <Preference
                android:key="rate"
                android:title="@string/rate" />

            <Preference
                android:key="os"
                android:title="@string/license" />
            </PreferenceScreen>
        <Preference
            android:key="feedback"
            android:title="@string/feedback" />
    </PreferenceCategory>
</PreferenceScreen>